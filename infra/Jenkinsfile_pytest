pipeline {
  agent {
    docker {
      image 'python:3.9'
      args  '--user root:root'
    }
  }
  stages {
    stage('Gitclone & Validate Commit') {
      steps {
        // Сначала клонируем репозиторий
        git 'https://github.com/denisdugar/ci-cd-tutorial-sample-app.git'

        // Затем проверяем сообщение последнего коммита
        script {
          def commitMsg = sh(
            script: "git log -1 --pretty=%B",
            returnStdout: true
          ).trim()

          if (commitMsg == 'build: automatic update of app') {
            error("Forbidden commit message detected: '${commitMsg}'. Failing the build.")
          }
        }
      }
    }

    stage('Test') {
      steps {
        sh 'pip install -r requirements.txt'
        sh 'python -m unittest discover'
      }
    }
  }
}
