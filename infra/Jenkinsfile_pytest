pipeline {
  agent {
    docker {
      image 'python:3.9'
      args  '--user root:root'
    }
  }
  stages {
    stage('Checkout') {
      steps {
        git url: 'https://github.com/denisdugar/ci-cd-tutorial-sample-app.git',
            branch: 'master',
            changelog: true,
            poll: false
      }
    }

    stage('Show commit info & Validate') {
      steps {
        script {
          def lastMsg    = ''
          def lastAuthor = ''
          
          for (changeSet in currentBuild.changeSets) {
            for (entry in changeSet.items) {
              lastMsg    = entry.msg
              lastAuthor = entry.author.fullName
            }
          }

          if (lastMsg) {
            echo "Last commit from user  ${lastAuthor}: «${lastMsg}»"
            if (lastMsg.trim() == 'build: automatic update of app') {
              error("Build aborted: forbidden commit message detected: '${lastMsg}'")
            }
          } else {
            echo "Run next stage"
          }
        }
      }
    }

    stage('Test') {
      steps {
        sh 'pip install -r requirements.txt'
        sh 'python -m unittest discover'
      }
    }
  }
}
